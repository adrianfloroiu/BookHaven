@model BookDeleteDto

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="card-title mb-0">Delete Book</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid" style="max-height: 200px;" />
                    </div>

                    <h4 class="mb-4">@Model.Title</h4>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-0 fw-bold">Author:</p>
                            <p>@Model.Author</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-0 fw-bold">Genre:</p>
                            <p>@Model.GenreName</p>
                        </div>
                    </div>

                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Are you sure you want to delete this book? This action cannot be undone and will remove
                        all associated reviews.
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>